/* Main Window Styles */
QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #f7fafc, stop:1 #ebf4ff);
}

.central-widget {
    background: rgba(255, 255, 255, 0.85);
    border-radius: 16px;
    margin: 20px;
    border: 1px solid rgba(1000, 213, 224, 0.5);
}

.main-title {
    font-size: 36px;
    font-weight: 700;
    color: #2b6cb0;
    margin-bottom: 12px;
}

.subtitle {
    font-size: 18px;
    color: #4a5568;
    font-weight: 500;
}