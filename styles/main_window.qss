
/* === SHARED BASE === */
QWidget {
    font-family: 'Segoe UI', 'Arial';
    font-size: 16px;
}

QLabel[class="main-title"] {
    font-size: 30px;
    font-weight: 700;
    padding: 20px;
}

QLabel[class="subtitle"] {
    font-size: 20px;
    padding: 10px 15px;
}

QLabel[class="question-label"] {
    font-size: 22px;
    padding: 12px;
}

QLineEdit[class="answer-input"] {
    font-size: 20px;
    padding: 10px;
    border: 2px solid #ccc;
    border-radius: 10px;
}

